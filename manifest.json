{
    "name": "MLBC Lookup",
    "version": "1.0",
    "description": "Look up listings & history for a player in MLB Champions",
    "permissions": ["activeTab", "tabs", "declarativeContent", "storage", "https://mlbc.app/*"],
    "background": {
        "scripts": ["background.js"],
        "persistent": false
    },
    "content_scripts": [
        {
          "matches": [
            "https://mlbc.app/*"
          ],
          "js": ["content-script.js"]
        }
      ],
    "page_action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "images/jh-16.png",
            "32": "images/jh-32.png",
            "48": "images/jh-48.png",
            "128": "images/jh-128.png"
        }
    },
    "icons": {
        "16": "images/get_started16.png",
        "32": "images/get_started32.png",
        "48": "images/get_started48.png",
        "128": "images/get_started128.png"
    },
    "web_accessible_resources": [
        "iframe.html"
      ],
    "manifest_version": 2
}
